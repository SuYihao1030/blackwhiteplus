/* template/quantity/index.wxss */
.quantity {
  color: #666;
}

.quantity view{
  display: inline-block;
  line-height: 20px;
  padding: 5px 0;
  text-align: center;
  min-width: 40px;
  box-sizing: border-box;
  vertical-align: middle;
  font-size: 14px;
  border: 1rpx solid #999;
}

.quantity .quantity_minus {
  border-right: none;
  border-radius: 2px 0 0 2px;
}

.quantity .quantity_text {
  border: 1rpx solid #999;
  display: inline-block;
  text-align: center;
  vertical-align: middle;
  height: 30px;
  width: 40px;
  font-size: 12px;
  line-height: 30px;
}

.quantity .quantity_plus {
  border-left: none;
  border-radius: 0 2px 2px 0;
}

.quantity .quantity_disabled {
  background: #f8f8f8;
  color: #bbb;
  border-color: #e8e8e8;
}

.quantity_small view {
  min-width: 36px;
  line-height: 18px;
}

.quantity_small .quantity_text {
  width: 36px;
  line-height: 28px;
  height: 28px;
}