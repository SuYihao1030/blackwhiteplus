/* pages/items/items.wxss */
.container {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #fff;
  color: #939393;
}

.item_left {
  display: inline-block;
  width: 25%;
  height: 100%;
  background-color: #f5f5f5;
  text-align: center;
  position: fixed;
}

.item_left .item_left_items {
  height: 40px;
  line-height: 40px;
  padding: 6px 0;
  border-bottom: 1px solid #dedede;
  font-size: 14px;
}

.item_left .item_left_items.active {
  background: #fff;
  color: #000;
}

.item_right {
  position: absolute;
  top: 0;
  right: 0;
  flex: 1;
  width: 75%;
  height: auto;
  padding: 10px;
  box-sizing: border-box;
  background: #fff;
  overflow-y: hidden;
}

.item_right .item_right_items {
  float: left;
  width: 33.3%;
  height: 130px;
  text-align: center;
}

.item_right .item_right_items image {
  width: 60px;
  height: 60px;
  margin-top: 15px;
}

.item_right .item_right_items text {
  display: block;
  margin-top: 15px;
  font-size: 14px;
}